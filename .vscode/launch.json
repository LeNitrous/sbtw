            }
        },
        {
            "name": "sbtw (Release)",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "Build sbtw (Release)",
            "console": "internalConsole",
            "windows": {
                "args": "${workspaceRoot}/src/desktop/sbtw.Desktop.Windows/bin/Debug/net6.0-windows/sbtw.dll"
            },
            "linux": {
                "args": "${workspaceRoot}/src/desktop/sbtw.Desktop.Linux/bin/Debug/net6.0/sbtw.dll"
            }
        }
    ]
