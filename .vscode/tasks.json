{
    "version": "2.0.0",
    "tasks": [
        {
            "label" : "Build sbtw (Debug)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "src/desktop/sbtw.Desktop",
                "-p:GeneratedFullPaths=true",
                "-m",
                "-verbosity:m"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label" : "Build sbtw (Release)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "src/desktop/sbtw.Desktop",
                "-p:Configuration=Release",
                "-p:GeneratedFullPaths=true",
                "-m",
                "-verbosity:m"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label" : "Build tests (Debug)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "tests/sbtw.Editor.Tests",
                "-p:GeneratedFullPaths=true",
                "-m",
                "-verbosity:m"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label" : "Build tests (Release)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "tests/sbtw.Editor.Tests",
                "-p:Configuration=Release",
                "-p:GeneratedFullPaths=true",
                "-m",
                "-verbosity:m"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
    ]
}
